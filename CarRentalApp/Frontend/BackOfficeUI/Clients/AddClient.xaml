<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Clients.AddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Clients"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Client">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="First Name"/>
            <TextBox x:Name="FirstNameTextBox" Width="200"/>

            <TextBlock Text="Last Name"/>
            <TextBox x:Name="LastNameTextBox" Width="200"/>

            <TextBlock Text="Phone"/>
            <TextBox x:Name="PhoneTextBox" Width="200"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailTextBox" Width="200"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
