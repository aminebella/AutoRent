<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Payments.AddPayment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Payments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Payment">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Reservation" Margin="0,5,0,5"/>
            <ComboBox x:Name="ReservationComboBox" Width="500" IsEditable="True"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Id"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"/>

            <TextBlock Text="Amount" Margin="0,5,0,5"/>
            <TextBox x:Name="AmountTextBox" Width="200"/>

            <TextBlock Text="Payment Method" Margin="0,5,0,5"/>
            <ComboBox x:Name="PaymentMethodComboBox" Width="200">
                <ComboBoxItem Content="CASH" IsSelected="True"/>
                <ComboBoxItem Content="CARD"/>
                <ComboBoxItem Content="BANK_TRANSFER"/>
            </ComboBox>

            <TextBlock Text="Payment Date (yyyy-MM-dd) - Leave empty for today" Margin="0,5,0,5"/>
            <TextBox x:Name="PaymentDateTextBox" Width="200"/>

            <TextBlock Text="Status" Margin="0,5,0,5"/>
            <ComboBox x:Name="StatusComboBox" Width="200">
                <ComboBoxItem Content="PENDING" IsSelected="True"/>
                <ComboBoxItem Content="COMPLETED"/>
                <ComboBoxItem Content="FAILED"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


