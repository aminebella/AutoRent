<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Payments.IndexPayments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Payments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Payments Index">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Add Payment" Width="120" Margin="0,0,10,0" Click="AddPayment_Click"/>
            <Button Content="Mark Completed" Width="130" Margin="0,0,10,0" Click="MarkCompleted_Click"/>
            <Button Content="Mark Failed" Width="120" Margin="0,0,10,0" Click="MarkFailed_Click"/>
            <Button Content="View Details" Width="110" Margin="0,0,10,0" Click="ViewDetails_Click"/>
            <Button Content="Refresh" Width="100" Click="Refresh_Click"/>
        </StackPanel>

        <!-- Filter buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="All" Width="80" Margin="0,0,10,0" Click="FilterAll_Click"/>
            <Button Content="Pending" Width="80" Margin="0,0,10,0" Click="FilterPending_Click"/>
            <Button Content="Completed" Width="80" Margin="0,0,10,0" Click="FilterCompleted_Click"/>
            <Button Content="Failed" Width="80" Margin="0,0,10,0" Click="FilterFailed_Click"/>
            <Label Content="Filter by Reservation ID:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox x:Name="ReservationIdFilterTextBox" Width="100" Margin="0,0,10,0" KeyDown="ReservationIdFilterTextBox_KeyDown"/>
            <Button Content="Filter" Width="60" Click="FilterByReservation_Click"/>
        </StackPanel>

        <DataGrid x:Name="PaymentsDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Reservation ID" Binding="{Binding ReservationId}" Width="100"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="Payment Method" Binding="{Binding PaymentMethod}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

