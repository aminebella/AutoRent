<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Requests.AddRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Requests"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Request">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Client" Margin="0,5,0,5"/>
            <ComboBox x:Name="ClientComboBox" Width="400" IsEditable="True" 
                      DisplayMemberPath="DisplayName" 
                      SelectedValuePath="Id"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"/>

            <TextBlock Text="Car" Margin="0,5,0,5"/>
            <ComboBox x:Name="CarComboBox" Width="400" IsEditable="True"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Id"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"/>

            <TextBlock Text="Start Date (yyyy-MM-dd)" Margin="0,5,0,5"/>
            <TextBox x:Name="StartDateTextBox" Width="200"/>

            <TextBlock Text="End Date (yyyy-MM-dd)" Margin="0,5,0,5"/>
            <TextBox x:Name="EndDateTextBox" Width="200"/>

            <TextBlock Text="Message (optional)" Margin="0,5,0,5"/>
            <TextBox x:Name="MessageTextBox" Width="400" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


