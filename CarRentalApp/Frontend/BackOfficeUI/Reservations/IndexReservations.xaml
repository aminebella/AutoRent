<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Reservations.IndexReservations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Reservations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reservations Index">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Add Reservation" Width="130" Margin="0,0,10,0" Click="AddReservation_Click"/>
            <Button Content="Finish Reservation" Width="140" Margin="0,0,10,0" Click="FinishReservation_Click"/>
            <Button Content="Cancel Reservation" Width="140" Margin="0,0,10,0" Click="CancelReservation_Click"/>
            <Button Content="Auto Finish Expired" Width="140" Margin="0,0,10,0" Click="AutoFinishExpired_Click"/>
            <Button Content="View Details" Width="110" Margin="0,0,10,0" Click="ViewDetails_Click"/>
            <Button Content="Refresh" Width="100" Click="Refresh_Click"/>
        </StackPanel>

        <!-- Filter buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="All" Width="80" Margin="0,0,10,0" Click="FilterAll_Click"/>
            <Button Content="Active" Width="80" Margin="0,0,10,0" Click="FilterActive_Click"/>
            <Button Content="Finished" Width="80" Margin="0,0,10,0" Click="FilterFinished_Click"/>
            <Button Content="Cancelled" Width="80" Margin="0,0,10,0" Click="FilterCancelled_Click"/>
            <Label Content="Filter by User ID:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <TextBox x:Name="UserIdFilterTextBox" Width="100" Margin="0,0,10,0" KeyDown="UserIdFilterTextBox_KeyDown"/>
            <Button Content="Filter" Width="60" Margin="0,0,10,0" Click="FilterByUser_Click"/>
            <Label Content="Filter by Car ID:" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <TextBox x:Name="CarIdFilterTextBox" Width="100" Margin="0,0,10,0" KeyDown="CarIdFilterTextBox_KeyDown"/>
            <Button Content="Filter" Width="60" Click="FilterByCar_Click"/>
        </StackPanel>

        <DataGrid x:Name="ReservationsDataGrid" Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Car ID" Binding="{Binding CarId}" Width="80"/>
                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="80"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=yyyy-MM-dd}" Width="120"/>
                <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Payment Status" Binding="{Binding PaymentStatus}" Width="100"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt, StringFormat=yyyy-MM-dd HH:mm}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>

