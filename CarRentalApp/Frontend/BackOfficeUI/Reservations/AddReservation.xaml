<Page x:Class="CarRentalApp.Frontend.BackOfficeUI.Reservations.AddReservation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarRentalApp.Frontend.BackOfficeUI.Reservations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add Reservation">

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Client" Margin="0,5,0,5"/>
            <ComboBox x:Name="UserComboBox" Width="400" IsEditable="True"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Id"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"/>

            <TextBlock Text="Car" Margin="0,5,0,5"/>
            <ComboBox x:Name="CarComboBox" Width="400" IsEditable="True"
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Id"
                      IsTextSearchEnabled="True"
                      TextSearch.TextPath="DisplayName"/>

            <TextBlock Text="Start Date (yyyy-MM-dd)" Margin="0,5,0,5"/>
            <TextBox x:Name="StartDateTextBox" Width="200"/>

            <TextBlock Text="End Date (yyyy-MM-dd)" Margin="0,5,0,5"/>
            <TextBox x:Name="EndDateTextBox" Width="200"/>

            <TextBlock Text="Total Price (leave empty to auto-calculate)" Margin="0,5,0,5"/>
            <TextBox x:Name="TotalPriceTextBox" Width="200"/>

            <TextBlock Text="Status" Margin="0,5,0,5"/>
            <ComboBox x:Name="StatusComboBox" Width="200">
                <ComboBoxItem Content="ACTIVE" IsSelected="True"/>
                <ComboBoxItem Content="CANCELLED"/>
                <ComboBoxItem Content="FINISHED"/>
            </ComboBox>

            <TextBlock Text="Payment Status" Margin="0,5,0,5"/>
            <ComboBox x:Name="PaymentStatusComboBox" Width="200">
                <ComboBoxItem Content="UNPAID" IsSelected="True"/>
                <ComboBoxItem Content="PAID"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="Save_Click"/>
                <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


